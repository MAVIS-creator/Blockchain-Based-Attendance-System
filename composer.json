{
    "name": "mavis-creator/blockchain-attendance-system",
    "description": "A secure, blockchain-verified attendance management system with device fingerprinting, IP tracking, and log-based storage (no SQL required)",
    "type": "project",
    "keywords": [
        "attendance",
        "blockchain",
        "attendance-system",
        "fingerprinting",
        "web3",
        "polygon",
        "log-based",
        "security",
        "php"
    ],
    "homepage": "https://github.com/MAVIS-creator/Blockchain-Based-Attendance-System",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/MAVIS-creator/Blockchain-Based-Attendance-System.git"
        }
    ],
    "authors": [
        {
            "name": "MAVIS",
            "email": "mavisenquires@gmail.com",
            "role": "Creator & Lead Developer"
        },
        {
            "name": "SamexHighshow",
            "role": "Co-Author"
        }
    ],
    "support": {
        "issues": "https://github.com/MAVIS-creator/Blockchain-Based-Attendance-System/issues",
        "source": "https://github.com/MAVIS-creator/Blockchain-Based-Attendance-System",
        "email": "mavisenquires@gmail.com"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "web3p/web3.php": "^0.3.2",
        "phpmailer/phpmailer": "^7.0",
        "dompdf/dompdf": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "MavisCreator\\AttendanceSystem\\": "src/"
        },
        "files": [
            "admin/includes/csrf.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MavisCreator\\AttendanceSystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env file from .env.example\\n'; }\""
        ],
        "setup": [
            "@composer install",
            "@php -r \"echo 'Setup complete! Please configure your .env file.\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
